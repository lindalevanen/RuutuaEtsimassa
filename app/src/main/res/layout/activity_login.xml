<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.linda.ruutuaetsimassa.LoginActivity">

    <RelativeLayout android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:padding="30dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/logB"
            android:layout_marginBottom="80dp"
            android:text="SähköBNB"/>

        <Button android:id="@+id/logB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:background="@color/background"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="KIRJAUDU SISÄÄN" />

        <Button android:id="@+id/regB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REKISTERÖIDY"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@color/background"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_below="@+id/logB"/>

    </RelativeLayout>

    <FrameLayout android:id="@+id/loginFrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|top">
    </FrameLayout>

    <FrameLayout android:id="@+id/regFrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|top">
    </FrameLayout>

    <FrameLayout android:id="@+id/ccFrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|top">
    </FrameLayout>


</RelativeLayout>
